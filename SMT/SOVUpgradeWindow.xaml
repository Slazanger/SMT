<Window x:Class="SMT.SOVUpgradeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage SOV Upgrades" Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#FF2D2D30">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <Label x:Name="SystemNameLabel" Content="System Name" FontSize="16" FontWeight="Bold" Foreground="White"/>
            <TextBlock x:Name="SystemInfoLabel" Text="Configure SOV upgrades for this system" Foreground="#FFAAAAAA" Margin="5,0,0,0"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Available Upgrades -->
            <Border Grid.Column="0" BorderBrush="#FF555555" BorderThickness="1" CornerRadius="3" Padding="5">
                <DockPanel>
                    <Label DockPanel.Dock="Top" Content="Available Upgrades" FontWeight="Bold" Foreground="White"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="AvailableUpgradesPanel"/>
                    </ScrollViewer>
                </DockPanel>
            </Border>

            <!-- Installed Upgrades -->
            <Border Grid.Column="2" BorderBrush="#FF555555" BorderThickness="1" CornerRadius="3" Padding="5">
                <DockPanel>
                    <Label DockPanel.Dock="Top" Content="Installed Upgrades" FontWeight="Bold" Foreground="White"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ListBox x:Name="InstalledUpgradesListBox"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="White"
                                 SelectionChanged="InstalledUpgradesListBox_SelectionChanged">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding DisplayName}" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding Category, StringFormat='({0})'}" Foreground="#FFAAAAAA"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                </DockPanel>
            </Border>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="RemoveSelectedButton" Content="Remove Selected" Width="120" Height="30" Margin="0,0,10,0" Click="RemoveSelectedButton_Click" IsEnabled="False"/>
            <Button x:Name="ClearAllButton" Content="Clear All" Width="100" Height="30" Margin="0,0,10,0" Click="ClearAllButton_Click"/>
            <Button x:Name="CloseButton" Content="Close" Width="80" Height="30" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
