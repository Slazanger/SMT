<Window x:Class="SMT.InfrastructureUpgradeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Infrastructure Hub Upgrades Manager" Height="600" Width="600"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize"
        Loaded="Window_Loaded">

    <Grid Margin="0" Background="{DynamicResource MenuBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- System Selection -->
        <GroupBox Grid.Row="0" Header="Select System" Padding="5" Margin="0,0,0,10" BorderThickness="1">
            <ComboBox x:Name="SystemComboBox" SelectionChanged="SystemComboBox_SelectionChanged" IsEditable="True" IsTextSearchEnabled="True" Height="20" />

        </GroupBox>

        <!-- Current Upgrades List -->
        <GroupBox Grid.Row="1" Header="Current Upgrades" Padding="5" Margin="0,0,0,10"
                  Foreground="LightGray" BorderBrush="#555555" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid x:Name="UpgradesDataGrid"
                          Grid.Row="0"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          SelectionMode="Single"
                          Margin="0,0,0,10"
                          Background="#2A2A2A"
                          Foreground="White"
                          AlternatingRowBackground="#333333"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Slot" Binding="{Binding SlotNumber}" Width="60" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Margin" Value="5,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Upgrade Name" Binding="{Binding UpgradeName}" Width="*" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Margin" Value="5,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Level" Binding="{Binding Level}" Width="60" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Margin" Value="5,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridCheckBoxColumn Header="Online" Binding="{Binding IsOnline}" Width="70" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="DeleteUpgradeButton" Content="Delete Selected" Width="120" Margin="5" Click="DeleteUpgradeButton_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Add New Upgrade -->
        <GroupBox Grid.Row="2" Header="Add/Edit Upgrade" Padding="10" Margin="0,0,0,10"
                  Foreground="LightGray" BorderBrush="#555555" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Row 1: Slot Number and Upgrade Type -->
                <Label Grid.Row="0" Grid.Column="0" Content="Slot:" Margin="5" VerticalAlignment="Center" Foreground="White"/>
                <ComboBox x:Name="SlotComboBox" Grid.Row="0" Grid.Column="1" Margin="5" VerticalAlignment="Center">
                    <ComboBoxItem Content="1"/>
                    <ComboBoxItem Content="2"/>
                    <ComboBoxItem Content="3"/>
                    <ComboBoxItem Content="4"/>
                    <ComboBoxItem Content="5"/>
                    <ComboBoxItem Content="6"/>
                    <ComboBoxItem Content="7"/>
                    <ComboBoxItem Content="8"/>
                    <ComboBoxItem Content="9"/>
                    <ComboBoxItem Content="10"/>
                </ComboBox>


                <Label Grid.Row="0" Grid.Column="2" Content="Upgrade Type:" Margin="5" VerticalAlignment="Center"/>



                <ComboBox x:Name="UpgradeTypeComboBox" Grid.Row="0" Grid.Column="3" Margin="5,0" FontSize="12" VerticalAlignment="Center">
                    <ComboBoxItem Content="Major Threat Detection Array"/>
                    <ComboBoxItem Content="Minor Threat Detection Array"/>
                    <ComboBoxItem Content="Power Monitoring Division"/>
                    <ComboBoxItem Content="Pyerite Prospecting Array"/>
                    <ComboBoxItem Content="Nocxium Prospecting Array"/>
                    <ComboBoxItem Content="Mexallon Prospecting Array"/>
                    <ComboBoxItem Content="Isogen Prospecting Array" />
                    <ComboBoxItem Content="Zydrine Prospecting Array"/>
                    <ComboBoxItem Content="Megacyte Prospecting Array"/>
                    <ComboBoxItem Content="Morphite Prospecting Array"/>
                    <ComboBoxItem Content="Advanced Logistics Network"/>
                    <ComboBoxItem Content="Cynosural Navigation"/>
                    <ComboBoxItem Content="Cynosural Suppression"/>
                    <ComboBoxItem Content="Supercapital Construction Facilities"/>
                    <ComboBoxItem Content="Clone Vat Bay"/>
                </ComboBox>

                <!-- Row 2: Level and Online Status -->
                <Label Grid.Row="1" Grid.Column="0" Content="Level:" Margin="5" VerticalAlignment="Center" Foreground="White"/>
                <ComboBox x:Name="LevelComboBox" Grid.Row="1" Grid.Column="1" Margin="5" Text="0" VerticalAlignment="Center">
                    <ComboBoxItem Content="0"/>
                    <ComboBoxItem Content="1"/>
                    <ComboBoxItem Content="2"/>
                    <ComboBoxItem Content="3"/>
                </ComboBox>


                <CheckBox x:Name="OnlineCheckBox" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" Content="Online" Margin="15,5,5,5" IsChecked="True" VerticalAlignment="Center" Foreground="White"/>

                <!-- Row 3: Add Button -->
                <Button x:Name="AddUpdateButton" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" Content="Add Upgrade" Width="150" Margin="5" HorizontalAlignment="Left" Click="AddUpdateButton_Click"/>
            </Grid>
        </GroupBox>

        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="CloseButton" Content="Close" Width="100" Margin="5" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
